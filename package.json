{
  "name": "plaincraft",
  "version": "0.2.0",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --open",
    "build": "vite build",
    "build:storybook": "storybook build",
    "changelog": "node scripts/consolidate-changelog.mjs",
    "ci:check": "node scripts/check-ci.mjs",
    "ci:watch": "node scripts/check-ci.mjs --watch",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "gh:prepare": "node scripts/prepare-gh.mjs",
    "gh:setup-labels": "node scripts/setup-labels.mjs",
    "gh:setup-project": "node scripts/setup-project.mjs",
    "ideas:create": "node scripts/ideas-to-issues.mjs",
    "ideas:sync": "node scripts/sync-ideas-checklists.mjs",
    "ideas:validate": "node scripts/validate-ideas.mjs",
    "issues:create": "node scripts/create-issues-from-changelog.mjs",
    "lint:staged": "lint-staged",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "check": "pnpm typecheck && pnpm lint && pnpm test",
    "new:snippet": "node scripts/new-snippet.mjs",
    "pr:check": "node scripts/pr-requirements.mjs --check-pr",
    "pr:create-issue": "node scripts/pr-requirements.mjs",
    "pr:generate": "node scripts/generate-pr-content.mjs",
    "pr:verify": "node scripts/pr-requirements.mjs --verify-pr",
    "prepare": "simple-git-hooks",
    "preview": "vite preview",
    "record:stories": "node scripts/record-stories.mjs",
    "storybook:test": "node scripts/test-storybook.mjs",
    "storybook:test:json": "node scripts/test-storybook.mjs --json --outputFile=storybook-test-results.json",
    "storybook:test:rebuild": "node scripts/test-storybook.mjs --rebuild",
    "storybook": "storybook dev -p 6006",
    "tag": "node scripts/auto-tag.mjs",
    "tag:release": "node scripts/auto-tag.mjs --create-release --push",
    "test": "vitest run --reporter=dot",
    "test:json": "vitest run --reporter=json --outputFile=test-results.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "version:bump": "node scripts/bump-version.mjs"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "@storybook/addon-a11y": "^9.1.15",
    "@storybook/addon-docs": "9.1.15",
    "@storybook/react": "^9.1.15",
    "@storybook/react-vite": "^9.1.15",
    "@storybook/test-runner": "^0.23.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-storybook": "^9.1.15",
    "eslint-plugin-unused-imports": "^4.0.0",
    "jsdom": "^24.1.1",
    "lint-staged": "^15.2.10",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "simple-git-hooks": "^2.9.0",
    "storybook": "^9.1.15",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.6.3",
    "vite": "^5.4.8",
    "vitest": "2.1.4"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "engines": {
    "node": ">=20.11.0",
    "npm": ">=10.0.0"
  },
  "simple-git-hooks": {
    "pre-commit": "node scripts/pre-commit-changelog.mjs && pnpm lint:staged"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "pnpm exec prettier --cache --write",
      "pnpm exec eslint --fix"
    ],
    "*.{json,md,css,scss,html,yml,yaml}": [
      "pnpm exec prettier --cache --write"
    ]
  }
}
