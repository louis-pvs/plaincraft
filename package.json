{
  "name": "plaincraft",
  "version": "0.22.16",
  "author": {
    "name": "Louis Phang",
    "email": "design.vincent.louis@gmail.com"
  },
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --open",
    "build": "vite build",
    "build:playbook": "vitepress build playbook",
    "build:storybook": "storybook build",
    "build:docs": "vitepress build docs",
    "ci:check": "node scripts/checks/check-ci.mjs",
    "ci:watch": "node scripts/checks/check-ci.mjs --watch",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "gh:prepare": "node scripts/checks/prepare-gh.mjs",
    "commit:guard": "node scripts/checks/commit-guard.mjs",
    "lint:staged": "lint-staged",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "check": "pnpm format:check && pnpm typecheck && pnpm lint && pnpm test",
    "playbook:dev": "vitepress dev playbook",
    "playbook:preview": "vitepress preview playbook",
    "docs:dev": "vitepress dev docs",
    "docs:preview": "vitepress preview docs",
    "pr:check": "node scripts/checks/pr-requirements.mjs --check-pr",
    "pr:create-issue": "node scripts/checks/pr-requirements.mjs",
    "pr:verify": "node scripts/checks/pr-requirements.mjs --verify-pr",
    "pr:template": "node scripts/checks/pr-template-lint.mjs",
    "prepare": "simple-git-hooks",
    "preview": "vite preview",
    "record:stories": "node scripts/record-stories.mjs",
    "storybook:test": "node scripts/test-storybook.mjs",
    "storybook:test:json": "node scripts/test-storybook.mjs --json --outputFile=storybook-test-results.json",
    "storybook:test:rebuild": "node scripts/test-storybook.mjs --rebuild",
    "storybook": "storybook dev -p 6006",
    "test": "vitest run --reporter=dot",
    "test:json": "vitest run --reporter=json --outputFile=test-results.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "version:bump": "node scripts/bump-version.mjs",
    "scripts:lint": "node scripts/checks/policy-lint.mjs",
    "scripts:test": "vitest run --reporter=dot scripts/**/*.spec.mjs",
    "scripts:smoke": "node scripts/checks/smoke.mjs",
    "scripts:size": "node scripts/checks/size-check.mjs",
    "scripts:deprecation": "node scripts/checks/deprecation-sweeper.mjs",
    "docs:lint": "node scripts/checks/readme-lint.mjs && node scripts/checks/template-coverage.mjs",
    "docs:coverage": "node scripts/checks/template-coverage.mjs",
    "docs:views": "node scripts/checks/view-dedupe.mjs",
    "docs:playbook": "node scripts/checks/playbook-link-guard.mjs",
    "docs:check": "pnpm docs:lint && pnpm docs:views && pnpm docs:playbook",
    "docs:report": "node scripts/checks/docs-report.mjs",
    "yaml:lint": "node scripts/checks/yaml-lint.mjs",
    "guardrails": "node scripts/checks/guardrails.mjs",
    "guardrails:scripts": "node scripts/checks/guardrails.mjs --scope scripts",
    "guardrails:docs": "node scripts/checks/guardrails.mjs --scope docs",
    "guardrails:pr": "node scripts/checks/guardrails.mjs --scope pr",
    "guardrails:issues": "node scripts/checks/guardrails.mjs --scope issues",
    "guardrails:recordings": "node scripts/checks/guardrails.mjs --scope recordings",
    "guardrails:ci": "node scripts/checks/guardrails.mjs --output json --report",
    "guardrails:baseline": "node scripts/checks/guardrails-baseline.mjs",
    "scripts:guardrails": "pnpm guardrails"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "@storybook/addon-a11y": "^9.1.15",
    "@storybook/addon-docs": "9.1.15",
    "@storybook/react": "^9.1.15",
    "@storybook/react-vite": "^9.1.15",
    "@storybook/test-runner": "^0.23.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/markdown-it": "^14.1.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^4.0.4",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-storybook": "^9.1.15",
    "eslint-plugin-unused-imports": "^4.0.0",
    "execa": "^8.0.1",
    "globals": "^16.4.0",
    "js-yaml": "^4.1.0",
    "jsdom": "^24.1.1",
    "lint-staged": "^15.2.10",
    "markdown-it": "^14.1.0",
    "mermaid": "^10.9.1",
    "msw": "^2.11.6",
    "pnpm": "^10.19.0",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "simple-git-hooks": "^2.9.0",
    "storybook": "^9.1.15",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.6.3",
    "vite": "^5.4.8",
    "vitepress": "^1.6.4",
    "vitest": "2.1.4",
    "zod": "^3.25.76"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "vue": "^3.5.22"
  },
  "engines": {
    "node": ">=20.11.0",
    "npm": ">=10.0.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,mjs}": [
      "prettier --cache --write",
      "eslint --fix"
    ],
    "*.{json,md,css,scss,html,yml,yaml}": [
      "prettier --cache --write"
    ],
    "**/README.md": [
      "node scripts/checks/readme-lint.mjs"
    ],
    "templates/**/template.config.json": [
      "node scripts/checks/template-coverage.mjs"
    ],
    "playbook/pages/**/*.{md,mdx}": [
      "node scripts/checks/view-dedupe.mjs"
    ],
    "playbook/patterns/**/*.md": [
      "node scripts/checks/playbook-link-guard.mjs"
    ],
    ".github/ISSUE_TEMPLATE/*.yml": [
      "node scripts/checks/issue-template-lint.mjs"
    ]
  }
}
