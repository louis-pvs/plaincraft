{
  "$schema": "../config.schema.json",
  "version": "0.1.0",
  "project": {
    "id": 987654321,
    "fields": {
      "id": "ID",
      "type": "Type",
      "lane": "Lane",
      "status": "Status",
      "owner": "Owner",
      "priority": "Priority",
      "release": "Release"
    },
    "statuses": [
      "Draft",
      "Ticketed",
      "Branched",
      "PR Open",
      "In Review",
      "Merged",
      "Archived"
    ],
    "types": ["Arch", "Bug", "Playbook", "Unit", "Composition"],
    "lanes": ["A", "B", "C", "D"],
    "priorities": ["P1", "P2", "P3", "P4"]
  },
  "branches": {
    "allowedPrefixes": ["feat", "fix", "chore", "docs", "ci", "ops"],
    "pattern": "^(feat|fix|chore|docs|ci|ops)\\/([A-Z]+-\\d+)-[a-z0-9-]+$"
  },
  "commits": {
    "pattern": "^\\[([A-Z]+-\\d+)\\]\\s+[a-z]+\\([^)]+\\):\\s+.+$"
  },
  "pullRequests": {
    "titlePattern": "^\\[([A-Z]+-\\d+)\\]\\s+.+$"
  },
  "ideas": {
    "directory": "ideas",
    "requiredFields": ["lane", "owner", "type", "priority", "state", "id"]
  }
}
