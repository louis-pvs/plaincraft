{
  "project": {
    "id": "PLAINCRAFT_ROADMAP",
    "views": {
      "lane:A": {
        "wip_limit": 3,
        "filters": {
          "labels": ["lane:A"]
        }
      },
      "lane:B": {
        "wip_limit": 3,
        "filters": {
          "labels": ["lane:B"]
        }
      },
      "lane:C": {
        "wip_limit": 3,
        "filters": {
          "labels": ["lane:C"]
        }
      },
      "lane:D": {
        "wip_limit": 3,
        "filters": {
          "labels": ["lane:D"]
        }
      }
    },
    "required_labels": ["lane:A", "lane:B", "lane:C", "lane:D"],
    "fields": {
      "ID": "unit_id|composition_id|bug_id",
      "Lane": "lane",
      "Acceptance": "acceptance",
      "Units": "units",
      "Metric": "metric"
    }
  },
  "tickets": {
    "unit": {
      "prefix": "U-",
      "template": ".github/ISSUE_TEMPLATE/unit-ticket.yml",
      "labels": ["lane:unit"],
      "project_fields": {
        "ID": "unit_id",
        "Lane": "lane",
        "Acceptance": "acceptance"
      }
    },
    "composition": {
      "prefix": "C-",
      "template": ".github/ISSUE_TEMPLATE/composition-ticket.yml",
      "labels": ["lane:composition"],
      "project_fields": {
        "ID": "composition_id",
        "Lane": "lane",
        "Acceptance": "acceptance",
        "Units": "units",
        "Metric": "metric"
      }
    },
    "bug": {
      "prefix": "B-",
      "template": ".github/ISSUE_TEMPLATE/bug-report.yml",
      "labels": ["lane:bug"],
      "project_fields": {
        "ID": "bug_id",
        "Lane": "lane",
        "Acceptance": "acceptance"
      }
    }
  },
  "pull_requests": {
    "require_issue_reference": true,
    "acceptance_checklist_required": true,
    "lane_label_required": true,
    "ticket_id_regex": "^\\[(U|C|B|ARCH|PB)-[a-z0-9-]+\\]",
    "templates": {
      "path": ".github/pull_request_template.md",
      "required_placeholders": ["Ticket ID", "Lane label", "Closes #"]
    }
  }
}
