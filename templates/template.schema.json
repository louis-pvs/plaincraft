{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Template Configuration",
  "description": "Metadata schema for canonical templates",
  "type": "object",
  "required": ["id", "version", "created", "owner", "category", "usage_ref"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Unique template identifier"
    },
    "version": {
      "type": "string",
      "pattern": "^v?\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version (e.g., v0.1.0)"
    },
    "created": {
      "type": "string",
      "format": "date",
      "description": "Creation date (YYYY-MM-DD)"
    },
    "updated": {
      "type": "string",
      "format": "date",
      "description": "Last update date (YYYY-MM-DD)"
    },
    "owner": {
      "type": "string",
      "pattern": "^@[a-zA-Z0-9-]+$",
      "description": "GitHub handle of owner (e.g., @louis-pvs)"
    },
    "category": {
      "type": "string",
      "enum": ["snippet", "idea", "workflow", "project", "document"],
      "description": "Template category"
    },
    "usage_ref": {
      "type": "string",
      "pattern": "^/templates/.*USAGE\\.md$",
      "description": "Path to USAGE.md file"
    },
    "scaffold_command": {
      "type": "string",
      "description": "Command to scaffold from this template (e.g., pnpm new:snippet)"
    },
    "artifact_ids": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^(U-|C-|ARCH-|PB-|B-)[a-z0-9-]+$"
      },
      "description": "Related artifact IDs"
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Required dependencies or prerequisites"
    }
  }
}
