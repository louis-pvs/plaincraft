{
  "id": "issue-unit",
  "name": "Issue (Unit)",
  "version": "0.1.0",
  "category": "workflow",
  "author": "plaincraft-doc-alignment",
  "created": "2025-01-28",
  "description": "Single-purpose issue template for bugs, small features, or focused tasks",
  "entrypoint": "issue-unit.md",
  "variables": [
    {
      "name": "ISSUE_TITLE",
      "description": "Clear, action-oriented title starting with verb",
      "required": true,
      "example": "Fix login redirect bug"
    },
    {
      "name": "COMPONENT_AREA",
      "description": "Affected component or file path",
      "required": true,
      "example": "src/components/Profile.tsx"
    },
    {
      "name": "CURRENT_BEHAVIOR",
      "description": "What happens now (for bugs)",
      "required": false
    },
    {
      "name": "EXPECTED_BEHAVIOR",
      "description": "What should happen",
      "required": true
    },
    {
      "name": "ACCEPTANCE_CRITERIA",
      "description": "Bullet list of testable completion conditions",
      "required": true
    }
  ],
  "references": {
    "guide": "guides/guide-workflow.md",
    "scripts": [
      "scripts/create-worktree-pr.mjs",
      "scripts/sync-issue-to-card.mjs"
    ],
    "related_templates": ["issue-composition", "pull-request"]
  },
  "constraints": {
    "max_scope_hours": 4,
    "requires_subtasks": false,
    "single_component": true
  }
}
